            <div class="container">
                <div class="card">
                    <div class="face face1">
                        <div class="content">
                            <% if(notes.style==='bold' ) {%>  
                            <h3 style="font-weight: bold ; color: <%= notes.color %>">Title:  <%=notes.heading%></h3>
                            <% } %>

                            <%  if(notes.style==='italic' ) { %>
                              <h3 style="font-style:italic ; color: <%= notes.color %>">Title:  <%=notes.heading%></h3>
                              <% } %>

                              <% if ( !notes.style) { %>   
                                <h3 style="color: <%=notes.color%>">
                                    Title:  <%=notes.heading%>
                                </h3>
                                <% } %> 
                        
                             
                                
                        </div>
                    </div>
                    <div class="face face2">
                        <div class="content">
                            <p>Note: <%=notes.body%></p>
                            <% if (currentUser && notes.authorID===(currentUser.userid)) { %>
                            <a href="/notes/<%=notes.noteid%>/edit" class="btn btn-warning">EDIT</a>
                            <form class='d-inline' action="/notes/<%=notes.noteid%>?_method=DELETE" method="POST">
                              <button class=" btn btn-danger">DELETE</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
                </div>
            </div>
